<h1>Listing courses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Start at</th>
    <th>End at</th>
    <th>Genre</th>
    <th>Programme</th>
    <th>Classroom</th>
    <th>Price</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
    <td><%= course.start_at %></td>
    <td><%= course.end_at %></td>
    <td><%= course.genre %></td>
    <td><%= course.programme_id %></td>
    <td><%= course.classroom_id %></td>
    <td><%= course.price %></td>
    <td><%= course.description %></td>

    <td>
      <% if can? :show, course %>
        <%= link_to 'Show', course %>
      <% end %>
    </td>
    <td>
      <% if can? :update, course %>
        <%= link_to 'Edit', edit_course_path(course) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, course %>
        <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />

