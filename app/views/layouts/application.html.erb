<!DOCTYPE html>
<html>
<head>
  <title>GaSchedulePlanner</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "public/stylesheets/event_calendar.css", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "public/javascripts/event_calendar.js" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1 class = "h5bp" >GA Scheduler</h1>
    <nav class = "main">
      <ul>
        <li>
          <%=link_to 'GA Scheduler', welcome_index_path%>
        </li>
        <li>
          <%=link_to 'locations', locations_path %>
        </li>
        <li>
          <%=link_to 'classrooms', classrooms_path %>
        </li>
        <li>
          <%=link_to 'courses', courses_path %>
        </li>
        <li>
          <%=link_to 'users', users_path %>
        </li>
        <li>
          <%=link_to 'programmes', programmes_path %>
        </li>
        <li>
          <%=link_to 'calendar', calendar_path %>
        </li>
        <% if current_user %>
        <li class = "user">hello <%= current_user.name %></li>
        <li class = "user">
          <%= link_to 'Show profile!', current_user %>
        </li>
        <li class = "user">
          <%= link_to 'Sign out', logout_path %>
        </li>
      <% else %>
        <li class = "user">
          <%= link_to 'Sign in!', new_session_path %>
        </li>
      <% end %>
      </ul>
    </nav>
  </header>

  <% flash.each do |name, msg| %>
    <div class="flash-message flash-message-<%= name %>">
      <%= msg %>
    </div>
  <% end %>

  <main>
    <%= yield %>
  </main>

  <footer></footer>

</body>
</html>
