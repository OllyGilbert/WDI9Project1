<!DOCTYPE html>
<html>
<head>
  <title>GaSchedulePlanner</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag    "public/stylesheets/event_calendar.css", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "public/javascripts/event_calendar.js" %>
  <%= csrf_meta_tags %>
</head>
<header>
  <% if current_user %>
    <p>hello <%= current_user.email %></p>
  <% end %>
    <p>
      <%= link_to 'Sign in!', new_session_path %>
    </p>
    <p>
      <%= link_to 'Sign out', logout_path %>
    </p>
    <p>
      <%= link_to 'Show profile!', current_user %>
    </p>
  <% flash.each do |name, msg| %>
  <div class="flash-message flash-message-<%= name %>">
    <%= msg %>
  </div>
  <% end %>
<nav>
  <ul>
    <li>
      <%=link_to 'locations', locations_path %>
    </li>
    <li>
      <%=link_to 'classrooms', classrooms_path %>
    </li>
    <li>
      <%=link_to 'courses', courses_path %>
    </li>
    <li>
      <%=link_to 'users', users_path %>
    </li>
    <li>
      <%=link_to 'programmes', programmes_path %>
    </li>
    <li>
      <%=link_to 'calendar', calendar_path %>
    </li>
  </ul>
</nav>
<div class="search">
  <%= search_form_for @q do |f| %> 
      <%= f.condition_fields do |c|%>
        <div class="field">
        <%= c.attribute_fields do |a| %> 
            <%= a.attribute_select %>
        <% end %>
        <%= c.predicate_select %> 
          <%= c.value_fields do |v| %>
            <%= v.text_field :value %>
          <% end %>
        </div>
        <% end %>
      <%= f.submit %>
    <% end %>
</div>
</header>
<body>



<%= yield %>

</body>
</html>
