= form_for(@classroom) do |f|
  - if @classroom.errors.any?
    #error_explanation
      %h2
        = pluralize(@classroom.errors.count, "error")
        prohibited this classroom from being saved:
      %ul
        - @classroom.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  %div
    = f.collection_select :location_id, Location.all, :id, :name
  .field
    = f.label :capacity
    %br/
    = f.number_field :capacity
  .actions
    = f.submit