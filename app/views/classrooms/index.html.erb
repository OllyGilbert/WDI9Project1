<h1>Classrooms</h1>

  <div class="search">
    <%= search_form_for @q do |f| %> 
        <%= f.condition_fields do |c|%>
          <div class="field">
          <%= c.attribute_fields do |a| %> 
              <%= a.attribute_select %>
          <% end %>
          <%= c.predicate_select %> 
            <%= c.value_fields do |v| %>
              <%= v.text_field :value %>
            <% end %>
          </div>
          <% end %>
        <%= f.submit %>
      <% end %>
    </div>
    
<table>
  <tr>
    <th>Name</th>
    <th>Location</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>



<% @classrooms.each do |classroom| %>
  <tr>
    <td><%= classroom.name %></td>
    <td><%= classroom.location_id %></td>
    <td><%= classroom.capacity %></td>
    <td>
      <% if can? :show, classroom %>
        <%= link_to 'Show', classroom %>
      <% end %>
    </td>
    <td>
      <% if can? :update, classroom %>
        <%= link_to 'Edit', edit_classroom_path(classroom) %>
      <% end %>
    </td>
    <td>
      <% if can? :destroy, classroom %>
        <%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @classrooms %>
<%= link_to 'New Classroom', new_classroom_path %>
