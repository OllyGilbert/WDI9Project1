= form_for(@programme) do |f|
  - if @programme.errors.any?
    #error_explanation
      %h2
        = pluralize(@programme.errors.count, "error")
        prohibited this programme from being saved:
      %ul
        - @programme.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :description
    %br/
    = f.text_field :description
  .actions
    = f.submit